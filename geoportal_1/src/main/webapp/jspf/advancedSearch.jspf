 <!-- topic keywords come from http://gcmd.nasa.gov/User/difguide/iso_topics.html  -->
 <div id="advancedSearchBox">
    <form id="advancedSearchForm" onsubmit="return false;">
    	<div class="searchFormRow">
   			<label for="advancedOriginatorText" class="searchFormLabel">Originator:</label>
   			<input name="advancedOriginatorText" type="text" class="searchFormInput" id="advancedOriginatorText"/>
		</div>
		<div class="searchFormRow">
    		<label for="advancedKeywordText" class="searchFormLabel">Keyword(s) / Abstract:</label>
    		<input name="advancedKeywordText" type="text" class="searchFormInput" id="advancedKeywordText"/>
    	</div>
		<div class="searchFormRow">
    		<label for="advancedDateFromText" class="searchFormLabel">Year(s):</label>
    		<span class="searchFormInput">
    			<input name="advancedDateFromText" type="text" id="advancedDateFromText" size="4" />
      			to
        		<input name="advancedDateToText" type="text" id="advancedDateToText" size="4" />
        	</span>
        	<span class="tip">Time Period of Content</span>
        </div>
    	<div class="searchFormRow">
   			<label for="filenameText" class="searchFormLabel">Filename:</label>
   			<input name="filenameText" type="text" class="searchFormInput" id="filenameText"/>
		</div>
    	<div class="searchFormRow">
    	    <label class="searchFormLabel">Topic:</label>
    		<div id="topicDropdown" class="searchFormInput">
      		</div>
    	</div>
        <div class="searchFormRow">
   			<label class="searchFormLabel">Data Type:</label>
   			<div id="dataTypeDropdown" class="styledDropdown searchFormInput">
      		</div>
   		</div>
   		<!--<div>-->
   			<div class="searchFormRow">
   			    <label class="searchFormLabel">Data Repository:</label>
   				<div id="sourceDropdown" class="searchFormInput">
      			</div>
      		</div>
      	<!--</div>-->
      	<div class="searchFormRow">
      	    <span class="searchFormLabel"><!-- spacer --></span>
    		<span class="formCheckbox searchFormInput">
    			<input type="checkbox" name="restrictedCheck" id="restrictedCheck" />
   				<label for="restrictedCheck">Include Restricted Data</label>
   			</span>
   		</div>
   		<div class="searchFormRow advancedSearchButtons">
   			<span id="advancedSearchClear" class="styledButtonSmall">Clear</span>
   			<span id="advancedSearchSubmit" class="styledButtonSmall">Search</span>
    	</div>
    	<div class="searchFormRow">
   			<input type="checkbox" name="mapFilterCheck2" id="mapFilterCheck2" class="mapFilterFlag" onclick="//org.OpenGeoPortal.ui.mapFilterStatus(this)" />
    		<label for="mapFilterCheck2">Limit results to visible map area</label>
    		<span id="lessSearchOptions" class="searchToggle button" onclick="org.OpenGeoPortal.ui.toggleSearch(this)">basic options</span>
    	</div>
	</form>
</div>
